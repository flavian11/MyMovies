<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/titleLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Title:"/>

        <TextView
            android:id="@+id/titleTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"/>

        <TextView
            android:id="@+id/yearLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Year:"/>

        <TextView
            android:id="@+id/yearTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"/>

        <TextView
            android:id="@+id/directorLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Director:"/>

        <TextView
            android:id="@+id/directorTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/mainCharacterLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Main Character:"/>

        <TextView
            android:id="@+id/mainCharacterTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/actorsLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Actors:"/>

        <TextView
            android:id="@+id/actorsTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="4"/>

        <TextView
            android:id="@+id/genreLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Genre:"/>

        <TextView
            android:id="@+id/genreTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="5"/>

        <TextView
            android:id="@+id/languageLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:text="Language:"/>

        <TextView
            android:id="@+id/languageTextView"
            style="@style/MovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"/>

        <TextView
            android:id="@+id/synopsisLabelTextView"
            style="@style/MovieLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:text="Synopsis:"/>

        <TextView
            android:id="@+id/synoppsisTextView"
            style="@style/MovieTextView"
            android:minHeight="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"/>

    </GridLayout>
</ScrollView>